<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.apache.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newsApp.dao.AreaChooseDao">

    <resultMap id="resultMap" type="com.newsApp.entity.areaChoose">
        <result property="ACNO" column="ACNo" jdbcType="INTEGER"/>
        <result property="userNo" column="UserNo" jdbcType="INTEGER"/>
        <result property="areaNo" column="AreaNo" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="tableName">AreaChoose</sql>
    <sql id="columns">
        ACNo,
        UserNo,
        AreaNo
    </sql>

    <sql id="columns2">
        UserNo,
        AreaNo
    </sql>


    <!-- single entity save -->
    <select id="getUserById" parameterType="java.lang.Integer" resultType="resultMap">
        select
        <include refid="columns"/>
        from
        <include refid="tableName"/>
        where
        userNo = #{id}
    </select>

    <!-- get entity by id -->
    <insert id="addUser" parameterType="com.newsApp.entity.User">
        insert into
        <include refid="tableName"/>
        (<include refid="columns2"/>) values
        (#{user.wechatId},
        #{user.userName},
        #{user.userTime})
    </insert>

</mapper>